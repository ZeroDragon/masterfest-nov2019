mixin circlePath(className, sw, completenes)
  circle(
    class=`${className}`
    r='40'
    cy='50'
    cx='50'
    stroke-width=`${sw}`
    stroke-dasharray=`${completenes} ${2 * Math.PI * 40}`
    fill='none'
  )
mixin stat(color, value, summary, footer, completenes)
  .stat(class=`${color}`)
    .section.summary
      .top
        .value #{value}
        summary #{summary}
      footer #{footer}
    .section.chart
      svg(width='100' height='100' xmlns='http://www.w3.org/2000/svg')
        -var full = 2 * Math.PI * 40
        -var percent = completenes * full / 100
        +circlePath('back', 3, full)
        +circlePath('front', 8, percent)
      .percentValue #{completenes}%


section.statistics
  header Project Statistics
  section.stats
    +stat('yellow', 125, 'All finished projects', '2 projects out of time', 66)
    +stat('blue', 125, 'All finished projects', '2 projects out of time', 33)

